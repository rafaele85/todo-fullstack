{
  "mcpServers": {
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "<your-token>"
      }
    }
  },
  "permissions": {
    "allow": [
      "Bash(pnpm typecheck *)",
      "Bash(git fetch*)",
      "Bash(git checkout *)",
      "Bash(git merge *)",
      "Bash(git stash *)",
      "Bash(git log *)",
      "Bash(git status *)",
      "Bash(git add *)",
      "Bash(git commit *)",
      "Bash(git push *)",
      "Bash(git branch *)",
      "Bash(git pull *)",
      "Bash(git -C * add *)",
      "Bash(git -C * commit *)",
      "Bash(git -C * push *)",
      "Bash(git -C * checkout *)",
      "Bash(git -C * log *)",
      "Bash(git -C * status *)",
      "Bash(git -C * branch *)",
      "Bash(gh branch *)",
      "Bash(gh pr *)",
      "Bash(gh issue create *)",
      "Bash(pnpm lint *)",
      "Bash(pnpm format*)",
      "Bash(cd * && git stash && pnpm format:check*; git stash pop)",
      "Bash(pnpm test *)",
      "Bash(pnpm test:coverage*)",
      "Bash(pnpm install *)",
      "Bash(pnpm build *)",
      "Bash(pnpm dev *)",
      "Bash(curl -s http://localhost*)"
    ]
  }
}